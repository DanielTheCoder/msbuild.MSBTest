<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0"  >

  <PropertyGroup Condition="'$(TestrunnerImport)'==''">
    <TestrunnerImport Condition="!Exists('$(TestrunnerImport)')">$(MSBuildThisFileDirectory)..\testFramework\testrunner.targets</TestrunnerImport>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Convention based for Nuget Package Restore -->
    <BuildDependsOn/>
    
    <BuildTargets>
      $(BuildDependsOn);
      RunTests;
    </BuildTargets>
    
    <CleanTargets>
      CleanTests;
    </CleanTargets>
    
    <RebuildTargets>
      Clean;
      Build;
    </RebuildTargets>

    <PublishTargets>
      Build;
    </PublishTargets>
    
  </PropertyGroup>

  <Import Condition="Exists('$(TestrunnerImport)')" Project="$(TestrunnerImport)" />

  <Target Name="Build">
    <CallTarget Targets="$(BuildTargets)" />
  </Target>

  <Target Name="Clean" >
    <CallTarget Targets="$(CleanTargets)" />
  </Target>

  <Target Name="Rebuild" >
    <CallTarget Targets="$(RebuildTargets)" />
  </Target>
  
  <Target Name="Publish">
    <CallTarget Targets="$(PublishTargets)" />
  </Target>

  <Target Name="GetNativeManifest" />
  <Target Name="GetCopyToOutputDirectoryItems" />
  <Target Name="AfterBuild" AfterTargets="Build" />

</Project>
