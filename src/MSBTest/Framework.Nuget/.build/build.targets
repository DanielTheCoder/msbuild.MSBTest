<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" >

  <Target Name="Build">
    <CallTarget Targets="CleanNugetFolderStructure;CopyFrameworkFilesToNugetPackageStructure" />
  </Target>
  <Target Name="Clean">
    <CallTarget Targets="CleanNugetFolderStructure" />
  </Target>
  <Target Name="Rebuild" />
  
  
  <Target Name="Publish"/>
  <Target Name="GetNativeManifest" />
  <Target Name="GetCopyToOutputDirectoryItems" />

  
  <Target Name="AfterBuild" AfterTargets="Build" />


  <Target Name="CopyFrameworkFilesToNugetPackageStructure">
    <CreateItem Include="$(MSBuildProjectDirectory)\..\Framework\testFramework\**\*.*" Exclude="*.cs">
      <Output TaskParameter="Include" ItemName="testFrameworkFiles"/>
    </CreateItem>
    <Copy SourceFiles="@(testFrameworkFiles)" 
          DestinationFolder="$(MSBuildProjectDirectory)\tools\testFramework\%(testFrameworkFiles.RecursiveDir)" 
          OverwriteReadOnlyFiles="true"
          ContinueOnError="true"/>
  
  </Target>

  <Target Name="CleanNugetFolderStructure">
    
    <ItemGroup>
      <files Include="$(MSBuildProjectDirectory)\tools\**\*.*"/>
      <files Include="$(MSBuildProjectDirectory)\lib\**\*.*"/>
      <files Include="$(MSBuildProjectDirectory)\content\**\*.*"/>
      <folders Include="%(files.RelativeDir)" />
    </ItemGroup>
    
    <Message Text="@(files)" />
    
    <Delete Files="@(files)" />
    <RemoveDir Directories="@(folders)" ContinueOnError="true" />
  </Target>
  
</Project>
